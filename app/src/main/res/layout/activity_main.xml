<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_wood_texture"
    android:padding="12dp"
    android:paddingBottom="?attr/actionBarSize"
    android:fitsSystemWindows="true">

<!-- Mavi yerine koyu kahverengi başlık -->
    <LinearLayout
        android:id="@+id/monthHeader"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="@color/wood_dark"
        android:paddingVertical="8dp"
        android:elevation="2dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageButton
            android:id="@+id/btnPrevMonth"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_chevron_left_24"
            app:tint="@color/paper_white"
            android:background="?attr/selectableItemBackgroundBorderless" />

        <TextView
            android:id="@+id/txtMonthTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ekim 2025"
            android:textColor="@color/paper_white"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginHorizontal="12dp" />


        <ImageButton
            android:id="@+id/btnNextMonth"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_chevron_right_24"
            app:tint="@color/paper_white"
            android:background="?attr/selectableItemBackgroundBorderless" />
    </LinearLayout>

    <!-- Liste -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_transactions"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:paddingBottom="120dp"
        android:clipToPadding="false"
        app:layout_constraintTop_toBottomOf="@id/monthHeader"
        app:layout_constraintBottom_toTopOf="@id/btnSyncServer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
    <!-- Özet Paneli: Ödenen / Kalan -->
    <LinearLayout
        android:id="@+id/summaryPanel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="@drawable/bg_summary"
        android:padding="10dp"
        android:elevation="2dp"
        app:layout_constraintBottom_toTopOf="@id/btnSyncServer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/tvPaidTotal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ödenen: ₺0"
            android:textColor="@color/green_dark"
            android:textStyle="bold"
            android:textSize="16sp"
            android:paddingEnd="24dp" />

        <TextView
            android:id="@+id/tvRemainingTotal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kalan: ₺0"
            android:textColor="@color/red_dark"
            android:textStyle="bold"
            android:textSize="16sp" />
    </LinearLayout>

    <!-- Butonlar -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnSyncServer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Senkronize Et (Laravel)"
        android:backgroundTint="@color/leaf_green"
        android:textColor="@color/paper_white"
        app:cornerRadius="16dp"
        android:elevation="3dp"
        app:icon="@drawable/ic_sync_24"
        app:iconTint="@color/paper_white"
        app:layout_constraintBottom_toTopOf="@id/btnCheckUpdate" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnCheckUpdate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Güncelleme kontrol et"
        android:backgroundTint="@color/accent_red"
        android:textColor="@color/paper_white"
        app:cornerRadius="16dp"
        android:elevation="3dp"
        app:layout_constraintBottom_toBottomOf="parent" />

    <!-- FAB -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabAdd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_add_24"
        android:backgroundTint="@color/wood_dark"
        app:tint="@color/paper_white"
        android:elevation="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/btnSyncServer"
        android:layout_margin="16dp" />
</androidx.constraintlayout.widget.ConstraintLayout>
